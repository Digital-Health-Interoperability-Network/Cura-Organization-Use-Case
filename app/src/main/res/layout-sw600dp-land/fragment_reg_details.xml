<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.registration.RegDetails">

    <TextView
        android:id="@+id/txt_reg_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_mini"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:padding="@dimen/padding_midi"
        android:text="@string/reg_organization_details_title"
        android:textColor="@color/custom_color"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_midi"
        android:padding="@dimen/padding_midi"
        app:cardElevation="@dimen/padding_mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_reg_details_title">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_reg_organization_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_mini"
                android:hint="@string/reg_organization_name"
                android:padding="@dimen/padding_midi"
                android:paddingTop="@dimen/padding_midi">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_organization_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:labelFor="@id/reg_id_state_id" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_reg_organization_alias_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_mini"
                android:hint="@string/reg_organization_alias_name"
                android:padding="@dimen/padding_midi"
                android:paddingTop="@dimen/padding_midi">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_organization_alias_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:labelFor="@id/reg_id_reg_no" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="16"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_reg_organization_identifier"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:layout_margin="@dimen/margin_mini"
                    android:hint="@string/reg_organization_identifier"
                    android:padding="@dimen/padding_midi"
                    android:paddingTop="@dimen/padding_midi">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/reg_organization_identifier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        android:labelFor="@id/reg_organization_identifier" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txt_input_layout_id_type"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:layout_margin="@dimen/margin_mini"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/custom_color">

                    <AutoCompleteTextView
                        android:id="@+id/reg_id_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:hint="@string/reg_id_type"
                        android:inputType="none"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp" />

                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_reg_organization_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_mini"
                android:hint="@string/reg_organization_email"
                android:padding="@dimen/padding_midi"
                android:paddingTop="@dimen/padding_midi">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_organization_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:labelFor="@id/reg_organization_email" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_reg_organization_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_midi"
                android:hint="@string/reg_organization_password"
                android:padding="@dimen/padding_midi"
                android:paddingTop="@dimen/padding_mini"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/custom_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_organization_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:labelFor="@id/reg_organization_password" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_reg_organization_confirm_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_mini"
                android:hint="@string/reg_organization_confirm_password"
                android:padding="@dimen/padding_midi"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/custom_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_organization_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:labelFor="@id/reg_organization_confirm_password" />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_mini"
                android:padding="@dimen/padding_mini"
                android:weightSum="5">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/sign_up_country_code_picker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="20dp"
                    app:ccp_contentColor="@color/custom_color"
                    app:ccp_countryPreference="NG,US,GH"
                    app:ccp_defaultNameCode="NG"
                    app:ccp_hintExampleNumber="true" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_organization_phone_number"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:hint="@string/sign_up_phone_number">

                    <EditText
                        android:id="@+id/organization_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="13" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>



        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>