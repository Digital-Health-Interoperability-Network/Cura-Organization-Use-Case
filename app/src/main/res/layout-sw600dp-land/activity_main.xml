<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_landscape_sign_in"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/padding_midi"
        android:layout_margin="@dimen/margin_mini"
        app:cardElevation="@dimen/padding_mini">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/step_layout_land"
            android:weightSum="16">

            <LinearLayout
                android:id="@+id/splash_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/project_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:color="@color/custom_color"
                    android:text="@string/project_name"
                    android:layout_margin="@dimen/padding_midi"
                    android:textSize="@dimen/sp32"
                    android:textStyle="bold"
                    app:fontFamily="@font/nabila"
                    />

                <TextView
                    android:id="@+id/use_case_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:color="@color/custom_color"
                    android:text="@string/project_use_case"
                    android:layout_margin="@dimen/padding_midi"
                    android:textSize="@dimen/sp20"
                    android:textStyle="bold"
                    app:fontFamily="@font/nabila"
                    />


            </LinearLayout>

        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>


