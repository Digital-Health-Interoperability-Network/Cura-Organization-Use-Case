<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardElevation="@dimen/padding_mini">
        <fragment
            android:id="@+id/fragment_cura"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:name="com.nameksolutions.regchain.curaorganization.base.Cura"
            tools:layout="@layout/fragment_cura"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        app:cardElevation="@dimen/padding_mini">

        <fragment
            android:id="@+id/fragment_personal_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.nameksolutions.regchain.curaorganization.auth.PersonalEmailInput"
            tools:layout="@layout/fragment_personal_email_input"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/margin_midi"
            android:padding="@dimen/padding_midi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </com.google.android.material.card.MaterialCardView>



</LinearLayout>