<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.personnel.NewPersonnelFragment">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_new_practitioner_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_midi"
        android:padding="@dimen/padding_midi"
        app:cardElevation="@dimen/padding_mini"
        app:layout_constraintBottom_toTopOf="@id/ll_btns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <ScrollView
        android:id="@+id/scrollview_add_personnel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_practitioner_role"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_mini"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/custom_color">

                <AutoCompleteTextView
                    android:id="@+id/reg_practitioner_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="@string/reg_practitioner_role"
                    android:inputType="none"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_layout_name_prefix"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_margin="@dimen/padding_mini"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/custom_color">

                    <AutoCompleteTextView
                        android:id="@+id/reg_practitioner_name_prefix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:hint="@string/reg_practitioner_title"
                        android:inputType="none"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_layout_reg_practitioner_surname"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_margin="@dimen/padding_mini"
                        android:hint="@string/reg_practitioner_surname"
                        android:padding="@dimen/padding_mini">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/reg_practitioner_surname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:importantForAutofill="no"
                            android:inputType="textPersonName"
                            android:labelFor="@id/reg_id_state_id" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_reg_practitioner_other_names"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_mini"
                    android:hint="@string/reg_practitioner_other_names"
                    android:padding="@dimen/padding_mini">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/reg_practitioner_other_names"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        android:labelFor="@id/reg_practitioner_other_names" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_practitioner_gender"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_mini"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/custom_color">

                <AutoCompleteTextView
                    android:id="@+id/reg_practitioner_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="@string/reg_practitioner_gender"
                    android:inputType="none"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_practitioner_id_type"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_mini"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/custom_color">

                    <AutoCompleteTextView
                        android:id="@+id/reg_practitioner_id_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:hint="@string/reg_practitioner_id_type"
                        android:inputType="none"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_reg_practitioner_identifier"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_mini"
                    android:hint="@string/reg_organization_identifier"
                    android:padding="@dimen/padding_mini">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/reg_practitioner_identifier_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        android:labelFor="@id/reg_organization_identifier_value" />
                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_reg_practitioner_email"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_mini"
                    android:hint="@string/reg_practitioner_email"
                    android:padding="@dimen/padding_mini">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/reg_practitioner_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        android:labelFor="@id/reg_organization_email" />
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_mini"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_mini"
                    android:weightSum="5">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/new_practitioner_country_code_picker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="20dp"
                        app:ccp_contentColor="@color/custom_color"
                        app:ccp_countryPreference="NG,US,GH"
                        app:ccp_defaultNameCode="NG"
                        app:ccp_hintExampleNumber="true" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_layout_new_practitioner_phone_number"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="@string/sign_up_phone_number">

                        <EditText
                            android:id="@+id/practitioner_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:maxLength="13" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>





                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/base_card_view_practitioner_available_times"
                    style="@style/Base.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_mini"
                    android:layout_marginEnd="@dimen/margin_mini"
                    android:layout_marginBottom="@dimen/margin_mini"
                    android:padding="@dimen/padding_midi">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_mini"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <TextView
                                android:id="@+id/practitioners_available_times_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:fontFamily="@font/roboto_black"
                                android:text="@string/practitioners_available_times_title"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/practitioners_available_times_button"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/practitioners_available_times_expand_arrow"
                                android:padding="@dimen/padding_midi"
                                android:src="@drawable/angle_up" />

                        </LinearLayout>



                        <ScrollView
                            android:id="@+id/practitioners_available_times_hide_able_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/padding_mini"
                                android:weightSum="16">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3.4"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="@string/title_day_of_operation"
                                    android:textAlignment="center"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5.5"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="@string/reg_open_time_hint"
                                    android:textAlignment="center"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5.5"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="@string/reg_close_time_hint"
                                    android:textAlignment="center"
                                    android:textSize="18sp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="16">

                                <CheckBox
                                    android:id="@+id/checkBox_practitioner_monday"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/margin_mini"
                                    android:layout_weight="2"
                                    android:padding="@dimen/padding_midi" />

                                <LinearLayout
                                    android:id="@+id/layout_practitioner_monday"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="14"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/txt_practitioner_mon"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:fontFamily="@font/roboto_black"
                                        android:text="@string/cb_monday_text"
                                        android:textSize="18sp" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/reg_practitioner_monday_open"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:background="@drawable/rounded_corner"
                                        android:padding="@dimen/padding_midi"
                                        android:text="@string/reg_open_time_hint_short"
                                        android:textAlignment="center"
                                        android:textSize="18sp" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/reg_practitioner_monday_close"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:background="@drawable/rounded_corner"
                                        android:hint="@string/reg_close_time_hint_short"
                                        android:padding="@dimen/padding_midi"
                                        android:textAlignment="center"
                                        android:textSize="18sp" />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="16">

                                <CheckBox
                                    android:id="@+id/checkBox_practitioner_tuesday"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/margin_mini"
                                    android:layout_weight="2"
                                    android:padding="@dimen/padding_midi" />

                                <LinearLayout
                                    android:id="@+id/layout_practitioner_tuesday"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="14"
                                    android:orientation="horizontal">


                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:fontFamily="@font/roboto_black"
                                        android:text="@string/cb_tuesday_text"
                                        android:textSize="18sp" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/practitioner_tuesday_open"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin= "@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:background="@drawable/rounded_corner"
                                        android:hint="@string/reg_open_time_hint_short"
                                        android:padding="@dimen/padding_midi"
                                        android:textAlignment="center"
                                        android:textSize="18sp" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/practitioner_tuesday_close"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:background="@drawable/rounded_corner"
                                        android:hint="@string/reg_close_time_hint_short"
                                        android:padding="@dimen/padding_midi"
                                        android:textAlignment="center"
                                        android:textSize="18sp" />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="16">

                                <CheckBox
                                    android:id="@+id/checkBox_practitioner_wednesday"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/margin_mini"
                                    android:layout_weight="2"
                                    android:padding="@dimen/padding_midi" />

                                <LinearLayout
                                    android:id="@+id/layout_practitioner_wednesday"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="14"
                                    android:orientation="horizontal">


                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:fontFamily="@font/roboto_black"
                                        android:text="@string/cb_wednesday_text"
                                        android:textSize="18sp" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/practitioner_wednesday_open"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:background="@drawable/rounded_corner"
                                        android:hint="@string/reg_open_time_hint_short"
                                        android:padding="@dimen/padding_midi"
                                        android:textAlignment="center"
                                        android:textSize="18sp" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/practitioner_wednesday_close"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:background="@drawable/rounded_corner"
                                        android:hint="@string/reg_close_time_hint_short"
                                        android:padding="@dimen/padding_midi"
                                        android:textAlignment="center"
                                        android:textSize="18sp" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="16">

                                <CheckBox
                                    android:id="@+id/checkBox_practitioner_thursday"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/margin_mini"
                                    android:layout_weight="2"
                                    android:padding="@dimen/padding_midi" />

                                <LinearLayout
                                    android:id="@+id/layout_practitioner_thursday"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="14"
                                    android:orientation="horizontal">


                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:fontFamily="@font/roboto_black"
                                        android:text="@string/cb_thursday_text"
                                        android:textSize="18sp" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/practitioner_thursday_open"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:background="@drawable/rounded_corner"
                                        android:hint="@string/reg_open_time_hint_short"
                                        android:padding="@dimen/padding_midi"
                                        android:textAlignment="center"
                                        android:textSize="18sp" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/practitioner_thursday_close"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:background="@drawable/rounded_corner"
                                        android:hint="@string/reg_close_time_hint_short"
                                        android:padding="@dimen/padding_midi"
                                        android:textAlignment="center"
                                        android:textSize="18sp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="16">

                                <CheckBox
                                    android:id="@+id/checkBox_practitioner_friday"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/margin_mini"
                                    android:layout_weight="2"
                                    android:padding="@dimen/padding_midi" />

                                <LinearLayout
                                    android:id="@+id/layout_practitioner_friday"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="14"
                                    android:orientation="horizontal">


                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:fontFamily="@font/roboto_black"
                                        android:text="@string/cb_friday_text"
                                        android:textSize="18sp" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/practitioner_friday_open"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:background="@drawable/rounded_corner"
                                        android:hint="@string/reg_open_time_hint_short"
                                        android:padding="@dimen/padding_midi"
                                        android:textAlignment="center"
                                        android:textSize="18sp" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/practitioner_friday_close"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:background="@drawable/rounded_corner"
                                        android:hint="@string/reg_close_time_hint_short"
                                        android:padding="@dimen/padding_midi"
                                        android:textAlignment="center"
                                        android:textSize="18sp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="16">

                                <CheckBox
                                    android:id="@+id/checkBox_practitioner_saturday"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/margin_mini"
                                    android:layout_weight="2"
                                    android:padding="@dimen/padding_midi" />

                                <LinearLayout
                                    android:id="@+id/layout_practitioner_saturday"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="14"
                                    android:orientation="horizontal">


                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_mini"
                                        android:layout_weight="4.5"
                                        android:fontFamily="@font/roboto_black"
                                        android:text="@string/cb_saturday_text"
                                        android:textSize="18sp" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/practitioner_saturday_open"
                                        android:layout_width="0dp"
