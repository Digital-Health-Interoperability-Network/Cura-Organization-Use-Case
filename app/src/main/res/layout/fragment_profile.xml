<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.profile.ui.ProfileFragment">


    <LinearLayout
        android:id="@+id/ll_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_back_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/padding_mini"
            android:layout_weight="1"
            android:padding="@dimen/padding_midi"
            app:srcCompat="@drawable/ic_angle_left" />

        <TextView
            android:id="@+id/text_profile_organization_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_mini"
            android:layout_weight="8"
            android:gravity="center"
            android:text="@string/profile"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_org_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_tool_bar"
        tools:visibility="visible">

        <TextView
            android:id="@+id/profile_org_name_txt"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="New Organisation"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/profile_name_edit_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/margin_maxi"
            android:layout_marginTop="@dimen/padding_maxi"
            android:contentDescription="@string/edit_organization_name"
            android:padding="@dimen/padding_mini"
            app:layout_constraintBottom_toTopOf="@id/profile_org_alias_name_txt"
            app:layout_constraintStart_toEndOf="@id/profile_org_name_txt"
            app:layout_constraintTop_toTopOf="@id/profile_org_name_txt"
            app:srcCompat="@drawable/ic_edit"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/profile_org_alias_name_txt"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_org_name_txt"
            tools:text="NO, New Org, New O, N Org"
            tools:visibility="visible" />


        <EditText
            android:id="@+id/et_profile_org_name"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="New Organisation" />

        <TextView
            android:id="@+id/profile_name_edit_ok_txt"
            style="@style/TextAppearance.AppCompat.Button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/margin_maxi"
            android:layout_marginTop="@dimen/padding_maxi"
            android:padding="@dimen/padding_mini"
            android:text="@string/time_picker_ok"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/et_profile_org_alias_name"
            app:layout_constraintStart_toEndOf="@id/et_profile_org_name"
            app:layout_constraintTop_toTopOf="@id/et_profile_org_name" />

        <EditText
            android:id="@+id/et_profile_org_alias_name"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_profile_org_name"
            tools:text="NO, New Org, New O, N Org" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_org_names_edit_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_tool_bar"
        tools:visibility="gone">


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:id="@+id/card_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_org_names"
        app:layout_constraintVertical_bias="0.131">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_mini"
            android:padding="@dimen/padding_mini"
            app:cardElevation="@dimen/padding_mini">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_mini"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/base_card_view_telecoms"
                    style="@style/Base.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_mini"
                    android:layout_marginEnd="@dimen/margin_mini"
                    android:layout_marginBottom="@dimen/margin_mini"
                    android:padding="@dimen/padding_midi">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_mini"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <TextView
                                android:id="@+id/profile_telecom_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:fontFamily="@font/roboto_black"
                                android:text="@string/telecom_title"
                                android:textColor="@color/custom_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/profile_add_telecom_button"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/profile_telecom_expand_arrow"
                                android:padding="@dimen/padding_midi"
                                android:src="@drawable/ic_add"
                                app:tint="@color/custom_color" />

                            <ImageButton
                                android:id="@+id/profile_telecom_button"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/profile_telecom_expand_arrow"
                                android:padding="@dimen/padding_midi"
                                android:src="@drawable/angle_down" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/profile_telecom_hide_able_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="7"
                            tools:visibility="gone">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_telecom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:itemCount="3"
                                tools:listitem="@layout/profile_telecoms_item" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/base_card_view_address"
                    style="@style/Base.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_mini"
                    android:layout_marginEnd="@dimen/margin_mini"
                    android:layout_marginBottom="@dimen/margin_mini"
                    android:padding="@dimen/padding_midi">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_mini"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <TextView
                                android:id="@+id/profile_addresses_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="@string/addresses_title"
                                android:textColor="@color/custom_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/profile_add_address_button"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/profile_address_add_icon"
                                android:padding="@dimen/padding_midi"
                                android:src="@drawable/ic_add"
                                app:tint="@color/custom_color" />


                            <ImageButton
                                android:id="@+id/profile_addresses_button"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/profile_address_expand_arrow"
                                android:padding="@dimen/padding_midi"
                                android:src="@drawable/angle_down" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/profile_addresses_hide_able_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="7"
                            tools:visibility="gone">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_addresses"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:itemCount="3"
                                tools:listitem="@layout/profile_addresses_item" />


                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/base_card_view_pharmacists"
                    style="@style/Base.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_mini"
                    android:layout_marginEnd="@dimen/margin_mini"
                    android:layout_marginBottom="@dimen/margin_mini"
                    android:padding="@dimen/padding_midi">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_mini"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <TextView
                                android:id="@+id/profiler_identifiers_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="@string/identifiers_title"
                                android:textColor="@color/custom_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/profile_add_identifiers_button"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/profile_identifiers_add_icon"
                                android:padding="@dimen/padding_midi"
                                android:src="@drawable/ic_add"
                                app:tint="@color/custom_color" />


                            <ImageButton
                                android:id="@+id/profile_identifiers_button"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/profile_identifiers_expand_arrow"
                                android:padding="@dimen/padding_midi"
                                android:src="@drawable/angle_down" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/profile_identifiers_hide_able_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="7"
                            tools:visibility="gone">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_identifiers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:itemCount="3"
                                tools:listitem="@layout/profile_identifiers_item" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/base_card_view_days_of_operation"
                    style="@style/Base.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_mini"
                    android:layout_marginEnd="@dimen/margin_mini"
                    android:layout_marginBottom="@dimen/margin_mini"
                    android:padding="@dimen/padding_midi">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_mini"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <TextView
                                android:id="@+id/days_of_operation_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="@string/days_of_operation_title"
                                android:textColor="@color/custom_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/profile_update_days_of_operation_button"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/profile_days_of_operation_add_icon"
                                android:padding="@dimen/padding_midi"
                                android:src="@drawable/ic_add"
                                app:tint="@color/custom_color" />


                            <ImageButton
                                android:id="@+id/profile_days_of_operation_button"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/profile_days_of_operation_expand_arrow"
                                android:padding="@dimen/padding_midi"
                                android:src="@drawable/angle_down" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/days_of_operation_hide_able_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="7">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_days_of_operation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:itemCount="3"
                                tools:listitem="@layout/profile_days_of_operation_item" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>