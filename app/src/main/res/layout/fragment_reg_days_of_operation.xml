                            android:background="@drawable/rounded_corner"
                            android:hint="@string/reg_close_time_hint_short"
                            android:padding="@dimen/padding_midi"
                            android:textAlignment="center"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="16">

                    <CheckBox
                        android:id="@+id/checkBox_thursday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_mini"
                        android:layout_weight="2"
                        android:padding="@dimen/padding_midi" />

                    <LinearLayout
                        android:id="@+id/layout_thursday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="14"
                        android:orientation="horizontal">


                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_mini"
                            android:layout_weight="4.5"
                            android:fontFamily="@font/roboto_black"
                            android:text="@string/cb_thursday_text"
                            android:textSize="18sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/roo_thursday_open"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_mini"
