<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="@dimen/padding_mini"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="30dp"-->
<!--        android:orientation="vertical">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_mini">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_input_layout_telecom_type"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_mini"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/custom_color">

            <AutoCompleteTextView
                android:id="@+id/update_telecom_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="@string/reg_id_type"
                android:inputType="none"
                android:paddingTop="20dp"
                android:paddingBottom="20dp" />

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_below="@id/txt_input_layout_telecom_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/telecom_update_phone_layout"
            android:visibility="gone"
            android:layout_margin="@dimen/padding_mini"
            android:orientation="horizontal"
            android:padding="@dimen/padding_mini"
            android:weightSum="5">

            <com.hbb20.CountryCodePicker
                android:id="@+id/telecom_update_country_code_picker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="20dp"
                app:ccp_contentColor="@color/custom_color"
                app:ccp_countryPreference="NG,US,GH"
                app:ccp_defaultNameCode="NG"
                app:ccp_hintExampleNumber="true"
                tools:overrideLibrary="com.hbb20.countrypicker" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_telecom_update_phone_number"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="@string/sign_up_phone_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/telecom_update_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLength="13" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_update_telecom_value"
            android:layout_below="@id/txt_input_layout_telecom_type"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_mini"
            android:hint="@string/profile_update_telecom_email_value"
            android:padding="@dimen/padding_mini">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_telecom_update_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:labelFor="@id/reg_organization_identifier_value" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_below="@id/text_input_layout_update_telecom_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_telecom_update_cancel_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="@string/btn_practitioner_cancel"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button"
                android:id="@+id/profile_telecom_update_okay_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="@string/update_btn_text"
                android:textAllCaps="false"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>



<!--    </LinearLayout>-->
</com.google.android.material.card.MaterialCardView>